      <section id="services" className="py-32 bg-white relative">
        <div className="max-w-7xl mx-auto px-6">
          <div className="text-center max-w-3xl mx-auto mb-24 space-y-4">
            <span className={`text-[11px] font-black uppercase tracking-[0.4em] ${primaryColor}`}>Comprehensive Solutions</span>
            <h2 className="text-5xl md:text-6xl font-black tracking-tighter uppercase leading-none text-slate-950">Our Core Expertise</h2>
