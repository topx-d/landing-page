                  <div className="space-y-2">
                    <label className="text-[10px] font-black uppercase tracking-widest text-slate-400">Company</label>
                    <input type="text" placeholder="e.g. Artisan Coffee Group" className="w-full bg-white border-none rounded-xl px-4 py-3 focus:ring-2 focus:ring-orange-500 outline-none shadow-sm" />
