      {/* Footer */}
      <footer className="py-20 bg-slate-950 text-white">
        <div className="max-w-7xl mx-auto px-6">
          <div className="flex flex-col md:flex-row justify-between items-center gap-10 pb-16 border-b border-slate-900">
